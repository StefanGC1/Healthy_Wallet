<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.healthy_wallet.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Add" onAction="#onAddTransaction"/>
        <Button text="Remove" onAction="#onHelloButtonClick"/>
    </HBox>
    <ListView fx:id="transactionListView" layoutX="20" layoutY="20" prefHeight="200" prefWidth="300" />
</VBox>
